<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="./table.css">
    <link rel="stylesheet" href="./style.css">

</head>
<body>
    <%- include("../adminNav") %>


<div class="filter-box">

    <div>
    <select id="approved-filter">
        <option value="0">not approved</option>
        <option value="1">approved</option>
    </select>
</div>
<div>
    <select id="returned-filter">
        <option value="0">not returned</option>
        <option value="1">returned</option>
    </select>
</div>
    <button class="btn btn-primary" id="filter-button">Filter</button>
</div>
<div class="table-container">
    <table class="minimalistBlack" id="requests-table">
        <%- returnTable(['request_id', 'date_of_request', 'duration', 'date_of_approval', 'student_srn', 'approved_by', 'book_isbn'], data, checkBbox=true, extraFields=[], boolHeader=['approved', 'returned']) %>
    </table>
</div>
<div class="filter-box">
<h3> Not returned as per schedule</h3>
</div>
<div class="table-container">
    <table class="minimalistBlack" id="late-table">
        <%- returnTable(['request_id', 'date_of_approval', 'deadline', 'student_srn'], newData, checkBbox=false, extraFields=[], boolHeader=[]) %>
    </table>
</div>
    <!-- <button id="update-button">Update</button> -->


    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="./getUserInfo.js"></script>
    <script src="./updateBorrowRequests.js"></script>
    
</body>
</html>